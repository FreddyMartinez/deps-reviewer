{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}
